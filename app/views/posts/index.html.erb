<%# Post Form %>
<div>
    <h1>Leave us a Post!</h1>
    <form action="/posts/create" method ="POST" id="create_post">
        <%= token_tag %>
        
        <label for="title">Title</label><br>
        <input type="text" name="title"><br>
        
        <label for="image">Image Url</label><br>
        <input type="url" name="image_url"><br>
        
        <label for="content">Post</label><br>
        <textarea type="text" name="content"></textarea><br>
        <p><strong>Note:</strong> The word 'Pi√±era' will be delete from the text</p>
        <input type="submit" value="Submit">
    </form>
</div>

<%# Post Dashboard %>
<div>
    <h2>Last Posts</h2>
    <table>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Date of entry</th>
            <th>Image</th>
            <th>Content</th>
        </tr>
        
        <% @posts.each do |post|%>
            <tr>
                <td><%= post.id %></td>
                <td><%= post.title %></td>
                <td><%= post.created_at %></td>
                <td><%= image_tag post.image_url, :size => "100x100" %></td>
                <td><%= post.content %></td>
            </tr>
        <% end %> 
    </table>
</div>