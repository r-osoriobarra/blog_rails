<%# Post Form %>
<h1>Leave us a Post!</h1>
<form action="/posts/create" method ="POST" id="create_post">
    <input type="hidden" name="authenticity_token" value="<% form_authenticity_token %>">
    
    <label for="title">Title</label><br>
    <input type="text" name="title"><br>
    
    <label for="image">Image Url</label><br>
    <input type="url" name="image_url"><br>
    
    <label for="content">Post</label><br>
    <input type="text" name="content"><br><br>
    
    <input type="submit" value="Submit">
</form>    

<%# Post Dashboard %>
<h2>Last Posts</h2>

<table>
    <tr>
        <th>Title</th>
        <th>Date of entry</th>
        <th>Image</th>
        <th>Content</th>
    </tr>
    
    <% @posts.each do |post|%>
        <tr>
            <td><%= post.title %></td>
            <td><%= post.created_at %></td>
            <td><%= post.image_url %></td>
            <td><%= post.content %></td>
        </tr>
    <% end %> 
</table>